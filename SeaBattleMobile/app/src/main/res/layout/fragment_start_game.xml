<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGameFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNumberX"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/viewPositionShipPlayer"
        app:layout_constraintEnd_toEndOf="@+id/viewPositionShipPlayer"
        app:layout_constraintStart_toStartOf="@+id/viewPositionShipPlayer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewPositionShipPlayer"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="80dp"
        android:background="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectShipType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Select ship type: "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/custom_text_view"
        app:layout_constraintStart_toStartOf="@+id/viewPositionShipPlayer"
        app:layout_constraintTop_toBottomOf="@+id/viewPositionShipPlayer" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_text_view"
        android:text="Enter first X, Y:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/selectShipType"
        app:layout_constraintStart_toStartOf="@+id/selectShipType"
        app:layout_constraintTop_toBottomOf="@+id/selectShipType" />

    <TextView
        android:id="@+id/deckShipCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_text_view"
        android:text="0 deck"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="@+id/viewPositionShipPlayer"
        app:layout_constraintStart_toEndOf="@+id/selectShipType"
        app:layout_constraintTop_toTopOf="@+id/selectShipType" />

    <EditText
        android:id="@+id/editTextX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="number"
        android:hint="X"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/deckShipCount"
        app:layout_constraintTop_toBottomOf="@+id/deckShipCount" />

    <EditText
        android:id="@+id/editTextY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="number"
        android:hint="Y"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/deckShipCount"
        app:layout_constraintTop_toBottomOf="@+id/deckShipCount" />

    <TextView
        android:id="@+id/textSelectOrientation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_text_view"
        android:gravity="center"
        android:text="Select orientation ship:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/viewPositionShipPlayer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_text_view"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textSelectOrientation"
        app:layout_constraintStart_toStartOf="@+id/textSelectOrientation"
        app:layout_constraintTop_toBottomOf="@+id/textSelectOrientation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:text="Horizontal"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/selectOrientationShip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:gravity="center"
            android:text=" Vertical "
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addShipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_text_view"
        android:text="Add Ship"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startGameButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_button"
        android:text="Start game"
        android:enabled="false"
        android:textAllCaps="false"
        android:textColor="@drawable/custom_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/addShipButton"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/addShipButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNumberY"
        android:layout_width="32dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewPositionShipPlayer"
        app:layout_constraintEnd_toStartOf="@+id/viewPositionShipPlayer"
        app:layout_constraintTop_toTopOf="@+id/viewPositionShipPlayer" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="Y\\X"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewNumberY"
        app:layout_constraintEnd_toStartOf="@+id/recyclerViewNumberX" />

    <TextView
        android:id="@+id/textViewIsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Player 1"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewNumberX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>